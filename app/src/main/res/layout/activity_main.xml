<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Logo aplikacji -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo aplikacji"
        android:layout_marginTop="24dp" />

    <!-- Wpisywanie wiadomości -->
    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/sendButton"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#BB86FC"
        android:hint="Wpisz wiadomość"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textColorHint="#BB86FC"
        android:background="@drawable/input_background"
        android:layout_marginTop="16dp" />

    <!-- Przycisk wysyłania -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:text="Wyślij"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- Odbierane wiadomości -->
    <TextView
        android:id="@+id/receivedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/messageInput"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Odebrane wiadomości pojawią się tutaj"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
